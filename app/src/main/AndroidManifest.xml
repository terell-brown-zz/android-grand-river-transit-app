<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tbrown.com.woodbuffalotransitmockup">

    <!-- ANDROID SDK COMPATIBILITY -->
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="20" />

    <!-- PERMISSIONS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="package.name.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <!-- SET OPENGL AS REQUIRED FEATURE -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="tbrown.com.woodbuffalotransitmockup.MAIN" />
                <action android:name="tbrown.com.woodbuffalotransitmockup.FAVOURITES" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.FavouritesActivity"
            android:label="@string/title_activity_favourites"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="tbrown.com.woodbuffalotransitmockup.FAVOURITES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.NearbyStopsActivity"
            android:label="@string/title_activity_nearby"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="tbrown.com.woodbuffalotransitmockup.NEARBY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.TripPlannerActivity"
            android:label="@string/title_activity_trip_planner"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="tbrown.com.woodbuffalotransitmockup.PLANNER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AllRoutesActivity"
            android:label="@string/title_activity_all_routes"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="tbrown.com.woodbuffalotransitmockup.ALL_ROUTES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SubRouteActivity"
            android:label="@string/title_activity_sub_routes"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="tbrown.com.woodbuffalotransitmockup.SUB_ROUTES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.RouteDetailsActivity"
            android:label="@string/title_activity_route_details"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="tbrown.com.woodbuffalotransitmockup.ROUTE_DETAILS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.StopTimesActivity"
            android:label="@string/title_activity_stop_details"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="tbrown.com.woodbuffalotransitmockup.STOP_TIMES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- USED FOR ACTIVITIES WITH GOOGLE MAPS -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.StopsMapActivity"
            android:label="@string/title_activity_stops_map">
            <intent-filter>
                <action android:name="tbrown.com.woodbuffalotransitmockup.MAP_STOPS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.StopInfoActivity"
            android:label="@string/title_activity_stop_info"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="tbrown.com.woodbuffalotransitmockup.STOP_INFO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>