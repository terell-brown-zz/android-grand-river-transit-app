<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/TwoLineViewTopPadding"
        android:paddingBottom="@dimen/TwoLineViewBottomPadding"
        android:paddingLeft="@dimen/iconPaddingLeft">

        <TextView android:id="@+id/tvRouteInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto Regular"
        android:textSize="@dimen/TwoLineViewPrimaryFontSize"
        android:text="@string/StopInfoSampleText1"
        android:textColor="@color/ColorListText"  />

        <TextView android:id="@+id/tvUpcomingStopTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto Regular"
            android:textSize="@dimen/TwoLineViewPrimaryFontSize"
            android:text="@string/StopInfoSampleText2"
            android:textColor="@color/fab_primary"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>