<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"></include>

    <tbrown.com.woodbuffalotransitmockup.widgets.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@color/ColorSlideTabLayout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab_to_alternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_fab_alternate"
        fab:fab_labelsPosition = "left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id = "@+id/fab_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Nearby Stops"
            fab:fab_icon = "@drawable/ic_nearby"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id = "@+id/fab_planner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Trip Planner"
            fab:fab_icon = "@drawable/ic_action_name"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id = "@+id/fab_all_routes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon = "@drawable/ic_all_routes" />
        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>


</LinearLayout>
