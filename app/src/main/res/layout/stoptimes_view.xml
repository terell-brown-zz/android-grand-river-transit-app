<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    android:background="@android:drawable/list_selector_background">


        <TextView
            android:id="@+id/tvStopTimes"
            android:layout_width="@dimen/row_width"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/row_margin_top"
            android:layout_marginBottom="@dimen/row_margin_bottom"
            android:layout_marginLeft="@dimen/row_margin_left"
            android:layout_gravity="center_vertical"
            android:fontFamily="Roboto Black"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_row_contents"
            android:gravity="center_vertical"
            tools:text="@string/sample_text_stop_times"/>

</LinearLayout>

